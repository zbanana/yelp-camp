<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="text-center">Add New Comment to <%= campground.name %></h1>
		<div style="width: 30%; margin: 25px auto">
			<form method="post" action="/campgrounds/<%= campground._id %>/comments">
				<div class="form-group">
					<input type="text" class="form-control" name="text" placeholder="comment">	
				</div>
<!-- 				<div class="form-group">
					<input type="text" class="form-control" name="comment[author]" placeholder="author">
				</div> -->
				<div class="form-group">
					<input type="submit" class="btn btn-large btn-primary btn-block">
				</div>
			</form>
			<a href="/campgrounds/<%= campground._id %>">Back to <%= campground.name %></a>
		</div>
	</div>
</div>
<% include ../partials/footer %>