<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="text-center">New Campground</h1>
		<div style="width: 30%; margin: 25px auto">
			<form method="post" action="/campgrounds">
				<div class="form-group">
					<input type="text" class="form-control" name="campground[name]" placeholder="name">	
				</div>
				<div class="form-group">
					<input type="number" class="form-control" name="campground[price]" placeholder="price" min="0.01" step="0.01">	
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="campground[image]" placeholder="image url">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="campground[description]" placeholder="description"></textarea>
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-large btn-primary btn-block">
				</div>
			</form>
			<a href="/campgrounds">Back to Campgrounds</a>
		</div>
	</div>
</div>
<% include ../partials/footer %>